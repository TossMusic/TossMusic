<div class="toss-form">


  <form action="/" method="POST" id="form-container">
    <div>
      <label for="searchMusic"></label>
      <input type="text" name="search" class="form-control" id="searchMusic" placeholder="Search your music">

      <br>

      <label for="searchGenre"></label>
      <select name="searchGenre" class="form-control" id="searchGenre" placeholder="Search the genre">
        <option value="Search genre">Search genre</option>
        {{#each genres}}
        <option value={{this}}>{{this}}</option>
        {{/each}}
      </select>
    </div>
    <button class="button-toss searchAlbum-buttom" type="submit">Buscar</button>
  </form>
</div>

<div class="container">
  <div class="row">
    {{#if result}}
    {{#each result}}
    <div class="col-3 d-flex align-items-stretch">
      <div class="card">
        <a href="/song/{{this.id}}"><img class="card-img-top" src="{{this.image}}" alt="Card image cap"></a>
        <div class="card-body d-flex flex-column justify-content-between">
          <h3 class="card-title">{{this.name}}</h3>
          <h6 class="card-artist">{{this.artist_name}}</h6>
          <h8 class="card-date"><em>{{this.releasedate}}</em></h8>
          <br>
          <a href="{{this.zip}}" class="btn btn-primary">Descargar Album</a>
        </div>
      </div>
    </div>
    {{/each}}
    {{/if}}
  </div>
</div>